{
	"name": "@auth-sphere/server",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build:clean": "del-cli dist",
		"build:check": "tsc --noEmit",
		"build:esm": "swc ./src --out-dir ./dist --strip-leading-paths",
		"build": "yarn build:clean && yarn build:check && yarn build:esm",
		"lint": "TIMING=1 DEBUG=eslint:eslint eslint src && prettier --check src",
		"lint:fix": "DEBUG=eslint:eslint eslint src --fix && prettier --write src",
		"format": "prettier --write . && eslint src --fix",
		"fmt": "yarn format",
		"start": "env-cmd node --enable-source-maps dist/index.js",
		"start:dev": "yarn build && yarn dev",
		"dev": "env-cmd node --enable-source-maps dist/index.js",
		"update": "yarn upgrade-interactive",
		"server:update": "git pull && yarn --immutable && yarn build && pm2 restart {0}",
		"recreate:db": "yarn workspace @auth-sphere/database recreate:db && yarn codegen",
		"codegen:main": "npx pg-to-ts generate -c postgresql://postgres:test@localhost:4433/authsphere -o ../server/src/generated/database.types.ts && echo \"✔ Default database types generated!\"",
		"codegen:keys": "npx pg-to-ts generate -c postgresql://postgres:test@localhost:4433/authsphere_keys -o ../server/src/generated/database-keys.types.ts && echo \"✔ Keys database types generated!\"",
		"codegen:gql": "graphql-codegen --config codegen.ts",
		"codegen": "yarn codegen:main && yarn codegen:keys && yarn codegen:gql"
	},
	"type": "module",
	"keywords": [],
	"author": "JPBM135 <jpedrobm0@gmail.com>",
	"license": "AGPL-3.0",
	"private": true,
	"dependencies": {
		"@apollo/server": "4.11.2",
		"@graphql-tools/merge": "9.0.11",
		"@graphql-tools/schema": "10.0.10",
		"@graphql-tools/utils": "10.6.1",
		"@sapphire/snowflake": "^3.5.5",
		"@sentry/node": "^8.41.0",
		"@sentry/profiling-node": "^8.41.0",
		"bcrypt": "^5.1.1",
		"cors": "2.8.5",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.5",
		"express": "4.21.1",
		"graphql": "^16.9.0",
		"graphql-modules": "patch:graphql-modules@npm%3A2.4.0#~/.yarn/patches/graphql-modules-npm-2.4.0-4048ec2d66.patch",
		"graphql-tag": "2.12.6",
		"helmet": "8.0.0",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"otplib": "^12.0.1",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.8.0",
		"typescript": "5.7.2",
		"undici": "^7.0.0",
		"uuid": "^11.0.3",
		"yarn": "^1.22.22"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/graphql-modules-preset": "^4.0.12",
		"@graphql-codegen/typescript": "^4.1.2",
		"@graphql-codegen/typescript-operations": "^4.4.0",
		"@graphql-codegen/typescript-resolvers": "^4.4.1",
		"@swc/cli": "^0.5.1",
		"@swc/core": "^1.9.3",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "2.8.17",
		"@types/jsonwebtoken": "^9",
		"@types/node": "^22.10.1",
		"@types/node-cron": "^3.0.11",
