# Environment
# Possible values: 'development', 'homolog', 'production'
NODE_ENV=development

# Server
# Port number for the server to listen on
PORT=3000

# Sentry
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Database
# Database connection details
DATABASE_HOST=your_database_host_here
DATABASE_USER=your_database_user_here
DATABASE_PASSWORD=your_database_password_here
DATABASE_NAME=your_database_name_here

# Express
# Maximum body size for incoming requests
EXPRESS_MAX_BODY_SIZE=5mb
# Allowed origins for CORS, comma-separated
EXPRESS_ALLOWED_ORIGINS=http://localhost:4200