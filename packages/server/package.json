		"@types/uuid": "^10.0.0",
		"@vitest/coverage-istanbul": "^2.1.6",
		"cpy-cli": "^5.0.0",
		"del-cli": "^6.0.0",
		"env-cmd": "^10.1.0",
		"eslint": "^9.17.0",
		"eslint-config-neon": "^0.2.4",
